.index-side
  .side-header
    .side-header__box
      %p.side-header__box__name
        = current_user.name
      %ul.side-header__box__icon 
        %li.side-header__box__edit-user
        = link_to new_group_path do
          = icon('fas', 'edit',  class: "icon")
        %li.side-header__box__new-group
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog',  class:"icon")



  .groups
    - current_user.groups.each do |group|
      .group
        = link_to "#", class:"group" do
          %p.group__group-name
            = group.name
          %p.group__latest-message
            まだありません

  


